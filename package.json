{
  "name": "react-orbit",
  "version": "0.1.0",
  "description": "CRDT-based offline-first React state management",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target browser --format esm",
    "test": "vitest",
    "test:file": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc src/index.ts",
    "demo": "bun --hot examples/basic-form/index.html",
    "demo:collab": "bun --hot examples/websocket-sync/index.html",
    "demo:server": "bunx y-websocket-server --port 1234"
  },
  "keywords": [
    "react",
    "crdt",
    "offline-first",
    "state-management",
    "yjs",
    "collaboration",
    "sync"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "dependencies": {
    "y-websocket": "^2.0.5",
    "yjs": "^13.6.20"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.1.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/bun": "^1.3.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.18.0",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "fake-indexeddb": "^6.2.5",
    "happy-dom": "^15.11.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typedoc": "^0.27.6",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
